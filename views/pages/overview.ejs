<!DOCTYPE html>
<html>

<head>
	<% include ../partials/head %>
</head>

<body>

	<% include ../partials/nav %>

<div class="row">
	<div class="col-sm-6 col-sm-offset-3 col-md-8 col-md-offset-2">
 		
 		<div class="row">
          <h3 class="sub-header">
            <a href="<%= domain %>/landing" class="navText"> Open RFPs</a> <i class="fa fa-chevron-right smaller" aria-hidden="true"></i> 
            <span class="navText"><%= name %></span>
          </h3>
 		</div>
		

		<div class="table-responsive">
			<table class="table table-hover">
				<thead>
					<tr>
						<th width="50%">File Name</th>
						<th width="25%">Updated</th>
						<th width="15%">Size</th>
						<th width="10%"></th>
					</tr>
			 	</thead>
				<tbody>
				<% packages.forEach(function(obj) { %>
					<tr class="file-row">
				  		<td><a href="<%= domain %>/item/download/<%= obj.id %>"><%= obj.name %></></td>
				  		<td><p><%= obj.created_at %></p></td>
				  		<td><p><%= obj.size %> MB</p></td>
				  		<td><button class="btn btn-default btn-sm download-button pull-right" type="submit"><span class="glyphicon glyphicon-download"></span></button></td>
					</tr>
				<% }); %>
				</tbody>
			</table>
		</div>

		<div class="row">
			<div class="col-md-6 col-md-offset-6">

				<p class="pull-right">
					<button class="btn btn-default" type="submit">Download All Files</button>
					<a class="btn btn-default btn-primary" href="<%= domain %>/submit/<%= parentId %>">Apply to RFP</a>
				</p>
			</div>
		</div>

	</div>
</div>


<div class="row">
	<div class="col-md-8 col-md-offset-2 iframe-box">
		<iframe frameBorder="0" width="100%" height="100%" src="<%= previewLink %>"></iframe>
	</div>
</div>

</body>